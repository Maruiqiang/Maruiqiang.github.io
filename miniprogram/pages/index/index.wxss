.page {
  background-color: #f3f3f3;
  
}

.head {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
  z-index: 2;
}

.head > image {
  width: 60rpx;
  height: 60rpx;
  
}

.head > input {
  width: 80%;
  border: none;
  border-radius: 50rpx;
  background-color: #f5f5f5;
  font-size: 28rpx;
  color: #333;
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
  text-align: center;
}

/* 调整输入框的光标颜色 */
.head > input::-webkit-input-placeholder {
  color: #999;
}
.head > input:-moz-placeholder {
  color: #999;
}
.head > input::-moz-placeholder {
  color: #999;
}
.head > input:-ms-input-placeholder {
  color: #999;
}

.swiper-container {
  margin-top: 90rpx;
  z-index: 1;
}

.swiper {
  width: 100%;

}

.auto-img {
  width: 100%;
  height: auto;
  display: block;
}


/* 宫格分类入口  */
.container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  background-color: white;
  /* padding: 10rpx 0rpx; */
  margin-top: 30rpx;
  }
  
  .body {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 18%;
  margin-bottom: 20rpx;
  text-align: center;
  }
  
  .body image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
  border-radius: 5rpx;
  }
  
  .body text {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 10rpx;
  }
  
 .tuijian {
  width: 100%;
  padding: 30rpx 0;
  margin-top: 20rpx;
  background-color: white;
  color: #CA954E;
  text-align: center;
  position: relative;
}

.tuijian:before,
.tuijian:after {
  content: "";
  position: absolute;
  left: 0;
  right: 0;
  border-top: 1px solid #CA954E;
}

.tuijian:before {
  top: 0;
}

.tuijian:after {
  bottom: 0;
}


.tuijian_1 {
  margin-top: 20px;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  }
  
  .tuijian_1 .product {
  width: 43%;
  height: 450rpx;
  margin-bottom: 10px;
  margin-left: 21rpx;
  margin-right: 21rpx;
  border: 1px solid #eee;
  border-radius: 10px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 1px 1px 5px #ccc;
  }
  
  .tuijian_1 .product image {
  width: 100%;
  max-width: 200px; /* 限制宽度，适应不同屏幕 */
  margin-bottom: 10px;
  }
  
  .tuijian_1 .product .name {
  font-size: 16px;
  margin-bottom: 5px;
  }
  
  .tuijian_1 .product .price {
  font-size: 14px;
  color: #f40;
  margin-bottom: 5px;
  }
  
  .tuijian_1 .product .add {
  font-size: 14px;
  color: #fff;
  background-color: #f40;
  border-radius: 3px;
  padding: 5px 10px;
  margin-bottom: 10px;
  }
  
  .search {
    background-color: #f3f3f3;
    width: 100%;
    position: fixed;
    top: 109rpx;
    z-index: 2;
    height: auto;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
  }
  
  .search_product {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    background-color: #fff;
    margin-bottom: 10rpx;
    padding: 10rpx;
    align-items: center;
  }
  
  .search_product > .left {
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  
  .search_product > .left > image {
    width: 70rpx;
    height: 70rpx;
    margin-right: 10rpx;
  }
  
  .search_product > .left > text {
    font-size: 28rpx;
    color: #333;
  }
  
  .search_product > .right {
    font-size: 30rpx;
    color: #E1961F;
  }
  