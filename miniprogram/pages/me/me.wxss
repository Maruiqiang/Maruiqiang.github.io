page {
  background-color: #f3f3f3;
}
.head {
  height: 250rpx;

}

.user {
  width: 88%;
  height: 180rpx;
  background-color: white;
 
  margin: 0 auto;
  margin-top: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: center;
  border-radius: 20rpx;
}

.img {
  width: 100rpx;
  height: 100rpx;
  margin-left: 50rpx;
  border-radius: 50%;
  overflow: hidden;
}

.name {
  margin-left: 20rpx;
}
.info {
  width: 88%;
  height: 220rpx;
  background-color: white;
 
  margin: 0 auto;
  margin-top: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: center;
  border-radius: 20rpx;
}

.info .avatar {
  width: 100rpx;
  height: 100rpx;
  margin-left: 50rpx;
  border-radius: 50%;
  overflow: hidden;
}

.info .name {
  display: flex;
  flex-direction: column;
  color: #000;
  margin-left: 40rpx;
}

.info .name text:nth-child(2) {
  margin-top: 25rpx;
}


.info .into {
  width: 50rpx;
  height: 50rpx;
  margin-left: auto;
}

.classify {
  width: 88%;
  margin: 0 auto;
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 20rpx;

  width: 88%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 50rpx;
}

.body {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 30%;
  height: 180rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 10rpx 0 rgba(0, 0, 0, 0.2);
}

.body image {
  width: 80rpx;
  height: 80rpx;
  margin-top: 20rpx;
}

.body text {
  margin-top: 15rpx;
  font-size: 28rpx;
  color: #666;
}


.poster {
  width: 88%;
  height: 250rpx;
